#!/usr/bin/env bash

read -p "Run brew cleanup? /yn/i " yn
set -x
case $yn in
  [Yy]* ) brew cleanup;;
  * ) echo "skipping brew cleanup";;
esac
brew update && brew upgrade \
  cloc \
  ctags \
  curl \
  fzf \
  git \
  gnu-sed \
  libffi \
  libssh \
  libssh2 \
  libyaml \
  openssl \
  pspg \
  readline \
  the_silver_searcher \
  tmux \
  valgrind \
  vim \
  xz \
  youtube-dl \
  zsh \

gem update \
  bundler \

