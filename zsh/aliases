# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

# Editor
alias vi='$EDITOR'

# Quick file access
alias aliases='$EDITOR ~/.dotfiles/zsh/aliases && source ~/.dotfiles/zsh/aliases'
alias zshrc='$EDITOR ~/.zshrc && source ~/.zshrc'
alias vimrc='$EDITOR ~/.dotfiles/lib/vimrc'
alias gitrc='$EDITOR ~/.gitconfig'
alias gems='$EDITOR ~/.rbenv/default-gems'

# Quick dir access
alias d='cd ~/.dotfiles'

# Git aliases
alias igt='git'
alias gti='git'
alias g='git'
alias amend="git commit --amend -v"
alias gs='git status'
alias gg='git grep -n'
alias fix='$EDITOR `git diff --name-only | uniq`'

alias killrb='killall -9 ruby'

alias remigrate='bundle exec rake db:drop db:create db:migrate db:test:clone parallel:prepare'
alias migrate='bundle exec rake db:migrate db:test:clone parallel:prepare'
alias rollback='bundle exec rake db:rollback'
