# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

alias -g G='| grep'

alias grep='grep -n'

# Editor
alias vi='vim'

# Quick file access
alias aliases='vim ~/.dotfiles/zsh/aliases && so'
alias so='source ~/.dotfiles/zsh/aliases'
alias zshconf='vim ~/.dotfiles/lib/zshrc'
alias vimrc='vim ~/.dotfiles/lib/vim/vimrc'
alias vimcf='vim ~/.dotfiles/lib/vim/config'

# Quick dir access
alias c='cd ~/Documents/Zilverline/'
alias o='cd ~/Documents/open-source/'
alias d='cd ~/.dotfiles'
alias dr='cd ~/Dropbox'
alias u='cd ..'

# Git aliases
alias g='git'
alias amend="git commit --amend"
alias gs='git status'
alias gg='git grep -n'
alias gpr='git pull --rebase'
alias grc='git rebase --continue'
alias fix='$EDITOR -p `git diff --name-only | uniq`'

alias gpush='git push'
alias gpsuh='git push'

# Bundle
alias be='bundle exec'
alias bi='bundle install'
alias bu='bundle update'
alias bunbang='bundle install && !!'

alias bake='bundle exec rake'
alias ber='bundle exec rspec --format progress --color'
alias bes='bundle exec rails s'
alias bec='bundle exec rails c'

alias killrb='killall -9 ruby'

alias postgres='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias migrate='bundle exec rake db:migrate db:test:clone'
alias rollback='bundle exec rake db:rollback'

# EngineYard
# alias ey='NOEXEC_DISABLE=1 ey'
# alias eybackup='NOEXEC_DISABLE=1 eybackup'
